{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true
        }
      ],
      "linebreak-style": [
        "off"
      ],
      "max-len": [
        2,
        {
          "code": 1000
        }
      ],
      "function-paren-newline": [
        "off"
      ]
    },
    "env": {
      "browser": true
    }
  }
  